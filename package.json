{
  "name": "apollon-vscode",
  "displayName": "Apollon",
  "description": "",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "apollonEditor.openDiagram",
        "title": "Open Diagram",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "apollonEditor.openDiagram",
          "when": "resourceExtname == .apollon",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "apollon",
          "title": "Apollon",
          "icon": "media/tum-logo.png"
        }
      ]
    },
    "views": {
      "apollon": [
        {
          "type": "webview",
          "id": "menu",
          "name": ""
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/styled-components": "^5.1.34",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@ls1intum/apollon": "^3.3.15",
    "styled-components": "6.1.8",
    "uuid": "^11.0.2"
  }
}
