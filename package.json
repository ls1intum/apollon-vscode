{
  "name": "apollon-vscode",
  "displayName": "Apollon",
  "description": "",
  "publisher": "tumaet",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "apollonEditor.openDiagram",
        "title": "Open Diagram",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "apollonEditor.openDiagram",
          "when": "resourceExtname == .apollon",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "apollon",
          "title": "Apollon",
          "icon": "media/tum-logo.png"
        }
      ]
    },
    "views": {
      "apollon": [
        {
          "type": "webview",
          "id": "menu",
          "name": ""
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "package": "vsce package",
    "start:menu": "cd menu && npm run start",
    "start:editor": "cd editor && npm run start",
    "build:webviews": "cd menu && npm run build && cd ../editor && npm run build",
    "install:webviews": "cd menu && npm install && cd ../editor && npm install",
    "install:all": "npm install && npm run install:webviews",
    "build:all": "npm run build && npm run build:webviews"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/styled-components": "^5.1.34",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@ls1intum/apollon": "^3.3.15",
    "@vscode/vsce": "^3.2.1",
    "styled-components": "6.1.8",
    "uuid": "^11.0.2"
  },
  "bugs": {
    "url": "https://github.com/ls1intum/apollon-vscode/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ls1intum/apollon-vscode.git"
  }
}
